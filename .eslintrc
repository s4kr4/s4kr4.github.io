{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
    },
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended",
  ],
  "rules": {
    "semi": [2, "never"],
    "indent": ["error", 2],
  },
  "plugins": [
    "react",
    "flowtype",
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true,
	},
  },
}
